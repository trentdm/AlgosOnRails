<dl class='dl-horizontal'>
<%= form_for @properties, :url => { :action => "index"}, 
	:html => {:method => "get" } do |f| %>
	<dt>Input</dt>
	<dd><%= f.text_field :input %></dd>
	<dt>Parameter</dt>
	<dd><%= f.text_field :parameter %></dd>
	<dt>Output</dt>
	<dd><%= @properties.output %></dd>
	<dt>Code</dt>
	<dd><%= f.text_area :code, :size => "60x12" %></dd>
	<dt>Submit</dt>
	<dd><%= f.submit "Submit" %></dd>	
<% end %>
</dl>